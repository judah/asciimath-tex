\addASCIIMathCmd{,...}{0}{,\ldots}
\addASCIIMathCmd{...,}{0}{\ldots,}
\addASCIIMathCmd{...}{0}{\cdots}
\addASCIIMathCmd{->}{0}{\to}
\addASCIIMathCmd{>=}{0}{\ge}
\addASCIIMathCmd{<=}{0}{\le}
\addASCIIMathCmd{=>}{0}{\implies}
\addASCIIMathCmd{!=}{0}{\ne}
\addASCIIMathCmd{-=}{0}{\equiv}

